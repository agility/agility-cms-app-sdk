{
  "name": "@agility/app-sdk",
  "version": "2.0.6",
  "description": "JavaScript library for building Agility CMS apps.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "clean": "rm -rf ./dist",
    "build:clean": "yarn clean",
    "build:esbuild:cjs": "esbuild src/index.ts --bundle --outdir=dist/cjs --platform=node --external:react --external:react-dom --format=cjs",
    "build:esbuild:esm": "esbuild src/index.ts --bundle --outdir=dist/esm --platform=node --external:react --external:react-dom --format=esm",
    "build:types": "tsc --emitDeclarationOnly",
    "build": "run-s build:clean build:types build:esbuild:cjs build:esbuild:esm",
    "prepare": "yarn build",
    "watch": "esbuild src/index.ts --bundle --outdir=dist/cjs --platform=node --external:react --external:react-dom --format=cjs --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/agility/agility-cms-app-sdk.git"
  },
  "author": "Joel Varty",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/agility/agility-cms-app-sdk/issues"
  },
  "homepage": "https://github.com/agility/agility-cms-app-sdk",
  "devDependencies": {
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.0.4",
    "@types/react": "^18.0.34",
    "@types/react-dom": "^18.0.11",
    "@types/node": "^18.15.11"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
